{var $robots = 'noindex'}
{block content}

	<div class="row">
		<div class="col-lg-3">
			{include menu.latte}
		</div>
		<div class="col-lg-9">
			{if $account}
				<h2>Úprava uživatele <strong>{$account->username}</strong></h2>
			{else}
				<h2>Založení nového uživatele</h2>
			{/if}
			<p>
				Na této stránce můžete pohodlně upravit, nebo vytvořit nového uživatele.
			</p>
			{control userEditForm}
		</div>
	</div>

{/block}
