{form settingsForm}
	<div class="row">
		<div class="col-lg-6">
			<fieldset>
				<legend>Obecné nastavení</legend>
				<div class="checkbox">
					{input random_search}
				</div>
				<div class="checkbox">
					{input show_content}
				</div>
				<div class="form-group">
					{label ga_code /}
					{input ga_code, class => "form-control"}
				</div>
				<div class="form-group">
					{label disqus_shortname /}
					{input disqus_shortname, class => "form-control"}
				</div>
			</fieldset>
		</div>
		<div class="col-lg-6">
			<fieldset>
				<legend>Nastavení příspěvků</legend>
				<div class="checkbox">
					{input show_comments}
				</div>
				<div class="checkbox">
					{input show_print}
				</div>
			</fieldset>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<fieldset>
				<legend style="color:maroon">Nebezpečná nastavení</legend>
				<div class="checkbox">
					{input disable_blog}
				</div>
			</fieldset>
		</div>
	</div>
	{*<fieldset>
		<legend>Aktivovat rozšíření</legend>
		<div class="checkbox">
			{input enable1}
		</div>
	</fieldset>*}
	<div class="well" style="max-width:250px;margin: 20px auto">
		{input save, class => "btn btn-block btn-success"}
	</div>
{/form}
